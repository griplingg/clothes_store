@model ClothesWeb.Models.ReturnProduct

<h2>Причина возврата</h2>
<head>
    <link rel="stylesheet" href="~/css/Universal.css" />

</head>
<form asp-action="Create" method="post" >
    <input type="hidden" name="ClientDate" id="clientDate" />
    <input type="hidden" asp-for="SellItemId" />
    <input type="hidden" asp-for="SellId" />

    <div class="form-group">
        <label>Причина возврата</label>
        <textarea asp-for="Reason" class="form-control"></textarea>
    </div>

    <br />

    <button type="submit" class="btn btn-danger">
        Подтвердить возврат
    </button>

    <a asp-action="Index" class="btn btn-secondary">
        Отмена
    </a>
</form>
<script>
    function getLocalIsoDate(date) {
        const year = date.getFullYear();
        const month = String(date.getMonth() + 1).padStart(2, '0');
        const day = String(date.getDate()).padStart(2, '0');
        return `${year}-${month}-${day}`;
    }
    document.getElementById('clientDate').value =
        getLocalIsoDate(new Date());
</script>