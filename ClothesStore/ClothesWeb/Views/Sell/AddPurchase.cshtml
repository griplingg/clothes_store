    <script>
        window.addEventListener('DOMContentLoaded', (event) => {
            var popup = document.getElementById('success-popup');
            if (popup && popup.innerText.trim() !== "") {
                var div = document.createElement('div');
                div.innerText = popup.innerText;
                div.className = 'popup-success';
                document.body.appendChild(div);

                setTimeout(() => {
                    div.style.opacity = '0';
                    setTimeout(() => div.remove(), 500);
                }, 3000);
            }
        });

        var itemIndex = 0;

        var products = @Html.Raw(Json.Serialize(
        Model.AllProducts.Select(p => new { id = p.Id, name = p.Name, article = p.ArticleNumber })
    ));

        function buildProductOptions(filteredProducts) {
            var opts = '<option value="">Список товаров</option>';
            filteredProducts.forEach(function(p) {
                opts += `<option value="${p.id}" data-article="${p.article}">${p.article} — ${p.name}</option>`;
            });
            return opts;
        }

        function getItemRowHtml(index) {
            var productOptions = buildProductOptions(products);

            return `
                <tr data-index="${index}">
                    <td>
                        <input type="text"
                               class="form-control form-control-sm article-search"
                               placeholder="Введите артикул для поиска"
                               data-index="${index}" />

                        <select
                            name="Items[${index}].ProductId"
                            class="form-control form-control-sm product-select mt-1"
                            data-index="${index}"
                            required>
                            ${productOptions}
                        </select>
                        <span class="text-danger field-validation-valid" data-valmsg-for="Items[${index}].ProductId"></span>
                    </td>

                    <td>
                        <select
                            name="Items[${index}].SizeId"
                            class="form-control form-control-sm size-select"
                            data-index="${index}"
                            disabled
                            required>
                            <option value="">Выберите размер</option>
                        </select>
                        <span class="text-danger field-validation-valid" data-valmsg-for="Items[${index}].SizeId"></span>
                    </td>

                    <td>
